@model MobilityStation

@{
    ViewData["Title"] = "Edit Station";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Station</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="StationId" hidden />
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PosCode" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="PosCode" class="ms-2"></label>
                    <span asp-validation-for="PosCode" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="StationCode" class="form-control border-0 shadow " placeholder="" />
                    <label asp-for="StationCode" class="ms-2"></label>
                    <span asp-validation-for="StationCode" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="StationName" class="form-control border-0 shadow " placeholder="" />
                    <label asp-for="StationName" class="ms-2"></label>
                    <span asp-validation-for="StationName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Initial" class="form-control border-0 shadow " placeholder="" />
                    <label asp-for="Initial" class="ms-2"></label>
                    <span asp-validation-for="Initial" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Mobility" asp-controller="Station" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}