@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Cashier Report";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">CASHIER REPORT</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 table-responsive">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-area="Mobility" asp-controller="CashierReport" asp-action="AdjustReport" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Adjust Report
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped" id="paginatedTable">
            <thead>
                <tr>
                    <th>Station Code / Name</th>
                    <th>Sales No</th>
                    <th>Date</th>
                    <th>Cashier</th>
                    <th>Shift</th>
                    <th>Time In</th>
                    <th>Time Out</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#paginatedTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "@Url.Action("GetSalesHeaders", "CashierReport")",
                    "type": "POST",
                    "data": function (d) {
                        d.__RequestVerificationToken = $('input[name="__RequestVerificationToken"]').val();
                    }
                },
                "columns": [
                    { "data": "StationCode", "name": "StationCode" },
                    { "data": "SalesNo", "name": "SalesNo" },
                    { "data": "Date", "name": "Date" },
                    { "data": "Cashier", "name": "Cashier" },
                    { "data": "Shift", "name": "Shift" },
                    { "data": "TimeIn", "name": "TimeIn" },
                    { "data": "TimeOut", "name": "TimeOut" },
                    {
                        "data": null,
                        "orderable": false,
                        "render": function (data, type, row) {
                            return '<div class="w-100 btn-group" role="group">' +
                                (row.PostedBy == null ? '<a asp-area="Mobility" asp-controller="CashierReport" asp-action="Edit" asp-route-id="' + row.SalesNo + '" asp-route-stationCode="' + row.StationCode + '" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>' : '') +
                                '<a asp-area="Mobility" asp-controller="CashierReport" asp-action="Preview" asp-route-id="' + row.SalesNo + '" asp-route-stationCode="' + row.StationCode + '" class="btn btn-primary mx-2"><i class="bi bi-printer-fill"></i> Preview</a>' +
                                '</div>';
                        }
                    }
                ]
            });
        });
    </script>
}