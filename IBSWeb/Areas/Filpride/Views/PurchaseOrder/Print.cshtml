@if (Model.ActualPrices!.Any())
{
    <div class="page-break"></div>


    <div class="page mb-3">
        <div class="text-center mb-4">
            <h3 class="fw-bold">Updated Prices</h3>
        </div>
        <div class="table-responsive">
            <table class="table table-hover text-center">
                <thead class="bg-primary text-white">
                <tr>
                    <th>Price</th>
                    <th>Updated Date</th>
                    <th>Approved Date</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var updatedPrice in Model.ActualPrices!)
                {
                    <tr>
                        <td>@updatedPrice.TriggeredPrice.ToString(SD.Four_Decimal_Format)</td>
                        <td>@DateTimeHelper.GetCurrentPhilippineTimeFormatted(updatedPrice.TriggeredDate)</td>
                        <td>@(updatedPrice.ApprovedDate != null ? DateTimeHelper.GetCurrentPhilippineTimeFormatted((DateTime)updatedPrice.ApprovedDate) : "" )</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="row pt-2">
    @{
        if (Model.PostedBy == null)
        {
            <div class="col-6 col-md-3">
                <a class="btn btn-primary form-control buttons" onclick="confirmPost(@Model.PurchaseOrderId)">Post</a>
            </div>
        }
        else if (Model.PostedBy != null && Model.Status == nameof(DRStatus.ForApprovalOfOM))
        {
            if (User.IsInRole("OperationManager") || User.IsInRole("Admin"))
            {
                <div class="col-6 col-md-3">
                    <a class="btn btn-primary form-control buttons" onclick="confirmApprove(@Model.PurchaseOrderId)">Approve</a>
                </div>
            }
        }
        else
        {
            <div class="col-6 col-md-3">
                <a asp-area="Filpride" asp-controller="PurchaseOrder" asp-action="Printed" asp-route-id="@Model.PurchaseOrderId" onclick="window.print()" class="btn btn-primary form-control buttons">Print</a>
            </div>
        }
    }

    <div class="col-6 col-md-3">
        <a asp-area="Filpride" asp-controller="PurchaseOrder" asp-action="Index" class="btn btn-outline-primary border form-control buttons">Back to List</a>
    </div>
</div>

@section Scripts {
    <script>
        var originalFontSizes = [];
        function printPage() {
            var printButton = document.getElementById("printButton");
            var otherButton = document.getElementById("otherButton");

            // Hide the header and footer
            document.querySelector("header").style.display = "none";

            // Hide the buttons before printing
            if (printButton) {
                printButton.style.visibility = "hidden";
            }
            if (otherButton) {
                otherButton.style.visibility = "hidden";
            }

            // Get all paragraph elements
            var paragraphs = document.querySelectorAll("p");

            // Store the original font sizes
            for (var i = 0; i < paragraphs.length; i++) {
                originalFontSizes[i] = paragraphs[i].style.fontSize;
                // Set the font size of all paragraph elements to 12px for printing
                paragraphs[i].style.fontSize = "12px";
            }

            // Get all table text elements
            var mytable = document.querySelectorAll("table");

            // Store the original font sizes
            for (var i = 0; i < mytable.length; i++) {
                originalFontSizes[i] = mytable[i].style.fontSize;
                // Set the font size of all paragraph elements to 12px for printing
                mytable[i].style.fontSize = "12px";
            }

            // Call the print function
            window.print();

            // Restore the font sizes
            for (var i = 0; i < paragraphs.length; i++) {
                paragraphs[i].style.fontSize = originalFontSizes[i];
            }

            // Restore the font sizes
            for (var i = 0; i < mytable.length; i++) {
                mytable[i].style.fontSize = originalFontSizes[i];
            }

            // Restore the buttons' visibility after printing (optional)
            if (printButton) {
                printButton.style.visibility = "visible";
            }
            if (otherButton) {
                otherButton.style.visibility = "visible";
            }

            // Restore the header and footer's visibility after printing (optional)
            document.querySelector("header").style.display = "";
        }
    </script>
    <script>
        function confirmPost(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    var url = `@Url.Action("Post", "PurchaseOrder", new { area = "Filpride" })/${id}`;
                    window.location.href = url;
                }
            })
        }
    </script>
    <script>
        function confirmApprove(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `@Url.Action("Approve", "PurchaseOrder", new { area = "Filpride" })`,
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            Swal.fire('Approved!', response.message, 'success').then(() => {
                                location.reload();
                            });
                        },
                        error: function(xhr) {
                            const errorMessage = xhr.responseJSON?.error || 'Something went wrong. Please try again.';
                            Swal.fire('Error!', errorMessage, 'error');
                        }
                    });
                }
            })
        }
    </script>
    <script src="~/js/disable-dev-tools-in-print.js" asp-append-version="true"></script>
}