@using IBS.Utility
@model PurchaseOrderViewModel

@{
    ViewData["Title"] = "Edit Purchase Order";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Purchase Order</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border-2 p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <input asp-for="PurchaseOrderId" type="hidden" />
                <div class="form-floating py-2 col-12">
                    <input asp-for="Date" type="date" class="form-control border-0 shadow" placeholder="" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <label asp-for="Date" class="ms-2">Date<span class="required">*</span></label>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group py-2 col-12">
                    <label class="control-label">Supplier List<span class="required">*</span></label>
                    <select asp-for="SupplierId" asp-items="@Model.Suppliers" class="form-select js-select2 border-0 shadow" style="width:100%">
                        <option value="" selected>Select supplier</option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
                <div class="form-group py-2 col-12">
                    <label class="control-label">Product List<span class="required">*</span></label>
                    <select asp-for="ProductId" asp-items="@Model.Products" class="form-select js-select2 border-0 shadow" style="width:100%">
                        <option value="" selected>Select product</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="form-group py-2 col-12">
                    <label class="control-label">Terms<span class="required">*</span></label>
                    <select asp-for="Terms" class="form-select js-select2 border-0 shadow" style="width:100%; max-height: 200px;">
                        <option value="" selected disabled>Select payment terms</option>
                        <option value="@SD.Terms_Cod">@SD.Terms_Cod</option>
                        <option value="@SD.Terms_7d">@SD.Terms_7d</option>
                        <option value="@SD.Terms_15d">@SD.Terms_15d</option>
                        <option value="@SD.Terms_30d">@SD.Terms_30d</option>
                        <option value="@SD.Terms_M15">@SD.Terms_M15</option>
                        <option value="@SD.Terms_M30">@SD.Terms_M30</option>
                    </select>
                    <span asp-validation-for="Terms" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Quantity" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Quantity" class="ms-2">Quantity<span class="required">*</span></label>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="UnitCost" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="UnitCost" class="ms-2">Unit Cost<span class="required">*</span></label>
                    <span asp-validation-for="UnitCost" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Port" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Port" class="ms-2">Port<span class="required">*</span></label>
                    <span asp-validation-for="Port" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Remarks" class="form-control border-0 shadow" placeholder="Indicate the reason of this changes." style="height: 100px"></textarea>
                    <label asp-for="Remarks" class="control-label">Remarks<span class="required">*</span></label>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Save</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Filpride" asp-controller="PurchaseOrder" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}