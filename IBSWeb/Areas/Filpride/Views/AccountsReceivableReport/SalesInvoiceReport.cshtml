@using IBS.Utility.Helpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ViewModelBook

@{
    ViewData["Title"] = "Accounts Receivable Report - Sales Invoice";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form id="dynamicForm" method="post" target="_blank">
            <div class="row">
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="button" class="btn btn-primary form-control" onclick="submitForm('GenerateSalesInvoiceReportExcelFile')"><i class="bi bi-file-text"></i> Generate as Excel file</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function submitForm(action) {
            var form = document.getElementById('dynamicForm');
            form.action = action;
            form.submit();
        }
    </script>
}