@model ViewModelBook

@{
    ViewData["Title"] = "Ap Report";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Ap Report</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form target="downloadFrame" method="post" asp-action="ApReportExcelFile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label class="control-label">As Of</label>
                <input name="monthYear" type="month" class="form-control" value="@DateTime.UtcNow.ToString("yyyy-MM")" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control"><i class="bi bi-printer"></i> Generate Ap Report excel file</button>
                </div>
            </div>
        </form>
        <iframe name="downloadFrame" style="display:none;"></iframe>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}