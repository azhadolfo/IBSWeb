@using IBS.Utility.Helpers

@{
    ViewData["Title"] = "Monthly Close";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-controller="MonthlyClose" asp-action="TriggerMonthlyClosure" method="post">
            <div class="row">
                <div class="mb-3">
                    <label class="control-label">Select Month</label>
                    <input type="month" name="monthDate" class="form-control" value="@DateTimeHelper.GetCurrentPhilippineTime().ToString("yyyy-MM")" />
                    <span class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control"><i class="bi bi-check-circle-fill me-2"></i>Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
