@model FilprideHauler

@{
    ViewData["Title"] = "Create Hauler";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Hauler</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="HaulerName" class="form-control border-0 shadow uppercase" placeholder="" />
                    <label asp-for="HaulerName" class="ms-2">Hauler Name<span class="required">*</span></label>
                    <span asp-validation-for="HaulerName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="HaulerAddress" class="form-control border-0 shadow uppercase" placeholder="" />
                    <label asp-for="HaulerAddress" class="ms-2">Hauler Address<span class="required">*</span></label>
                    <span asp-validation-for="HaulerAddress" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ContactNo" class="form-control border-0 shadow uppercase" placeholder="" />
                    <label asp-for="ContactNo" class="ms-2">Contact No<span class="required">*</span></label>
                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Filpride" asp-controller="Hauler" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}