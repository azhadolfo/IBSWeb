@model ReceivingReportViewModel

@{
    ViewData["Title"] = "Create Receiving Report";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Receiving Report</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border-2 p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Date" type="date" class="form-control border-0 shadow" placeholder="" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <label asp-for="Date">Date<span class="required">*</span></label>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group py-2 col-12">
                    <label class="control-label">Customer List<span class="required">*</span></label>
                    <select asp-for="CustomerId" asp-items="@Model.Customers" class="form-select js-select2 border-0 shadow" style="width:100%">
                        <option value="" selected>Select customer</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
                <div class="form-group py-2 col-12">
                    <label class="control-label">DR List<span class="required">*</span></label>
                    <select asp-for="DeliveryReceiptId" asp-items="@Model.DeliveryReceipts" class="form-select js-select2 border-0 shadow" style="width:100%">
                        <option value="" selected>Select supplier</option>
                    </select>
                    <span asp-validation-for="DeliveryReceiptId" class="text-danger"></span>
                </div>
                <fieldset class="border p-2 py-2">
                    <legend class="w-auto px-2">Supplier Details</legend>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="SupplierSiNo" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="SupplierSiNo">SI#</label>
                        <span asp-validation-for="SupplierSiNo" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="SupplierSiDate" type="date" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="SupplierSiDate">SI Date</label>
                        <span asp-validation-for="SupplierSiDate" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="SupplierDrNo" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="SupplierDrNo">DR#</label>
                        <span asp-validation-for="SupplierDrNo" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="SupplierDrDate" type="date" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="SupplierDrDate">DR Date</label>
                        <span asp-validation-for="SupplierDrDate" class="text-danger"></span>
                    </div>
                </fieldset>

                <div class="form-floating py-2 col-12">
                    <input asp-for="OtherReference" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="OtherReference">Other Reference<span class="required">*</span></label>
                    <span asp-validation-for="OtherReference" class="text-danger"></span>
                </div>

                <div class="row py-2">
                    <div class="form-floating col-6">
                        <input asp-for="QuantityDelivered" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="QuantityDelivered" class="ms-2">Quantity Delivered<span class="required">*</span></label>
                        <span asp-validation-for="QuantityDelivered" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-6">
                        <input asp-for="QuantityReceived" class="form-control border-0 shadow" placeholder="" />
                        <label asp-for="QuantityReceived" class="ms-2">Quantity Received<span class="required">*</span></label>
                        <span asp-validation-for="QuantityReceived" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Freight" class="form-control border-0 shadow" placeholder="" readonly tabindex="-1" />
                    <label asp-for="Freight">Freight</label>
                    <span asp-validation-for="Freight" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="TotalFreight" class="form-control border-0 shadow" placeholder="" readonly tabindex="-1" />
                    <label asp-for="TotalFreight">Total Freight</label>
                    <span asp-validation-for="TotalFreight" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Remarks" class="form-control border-0 shadow" placeholder="Indicate the reason of this changes." style="height: 100px"></textarea>
                    <label asp-for="Remarks" class="control-label">Remarks<span class="required">*</span></label>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Filpride" asp-controller="ReceivingReport" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Get Delivery Receipts by Customer
            $('select[name="CustomerId"]').on('change', function () {
                var customerId = $(this).val();
                if (customerId) {
                    $.ajax({
                        url: '@Url.Action("GetDeliveryReceiptsByCustomer", "ReceivingReport")',
                        type: "GET",
                        data: { customerId: customerId },
                        success: function (data) {
                            var $drSelect = $('select[name="DeliveryReceiptId"]');
                            $drSelect.empty();
                            if (data && data.length > 0) {
                                $drSelect.append('<option value="">Select DR</option>');
                                $.each(data, function (index, item) {
                                    $drSelect.append('<option value="' + item.value + '">' + item.text + '</option>');
                                });
                            } else {
                                $drSelect.append('<option value="">No DR available</option>');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.log("Error: " + error);
                        }
                    });
                } else {
                    var $drSelect = $('select[name="DeliveryReceiptId"]');
                    $drSelect.empty();
                    $drSelect.append('<option value="">Select DR</option>');
                }
            });

            // Get Freight and update total freight
            $('select[name="DeliveryReceiptId"]').on('change', function () {
                var drId = $(this).val();
                if (drId) {
                    $.ajax({
                        url: '@Url.Action("GetFreightByDeliveryReceipt", "ReceivingReport")',
                        type: "GET",
                        data: { drId: drId },
                        success: function (data) {
                            console.log(data)
                            if (data) {
                                $('input[name="Freight"]').val(formatNumber(data));
                                updateTotalFreight();
                            } else {
                                $('input[name="Freight"]').val('');
                                $('input[name="TotalFreight"]').val('');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.log("Error: " + error);
                        }
                    });
                } else {
                    $('input[name="Freight"]').val('');
                    $('input[name="TotalFreight"]').val('');
                }
            });

            // Calculate Total Freight
            $('input[name="QuantityReceived"]').on('input', function () {
                updateTotalFreight();
            });

            function updateTotalFreight() {
                var quantityReceived = parseFloat($('input[name="QuantityReceived"]').val()) || 0;
                var freight = parseFloat($('input[name="Freight"]').val()) || 0;
                var totalFreight = quantityReceived * freight;
                $('input[name="TotalFreight"]').val(formatNumber(totalFreight));
            }
        });
    </script>
}