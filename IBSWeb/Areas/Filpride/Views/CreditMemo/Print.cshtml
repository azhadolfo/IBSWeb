                                        }
                                    </tr>
                                    <tr>
                                        <td><p style="height: 9px; margin-left:8%;"><b>Zero-Rated Sales: </b></p></td>
                                        @if (customerVatType == SD.VatType_ZeroRated)
                                        {
                                            <td class="text-end">@Math.Abs(Model.CreditAmount).ToString(decimalFormat)</td>
                                        }
                                        else
