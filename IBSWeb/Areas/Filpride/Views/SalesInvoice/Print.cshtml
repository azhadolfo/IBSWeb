    <tbody>
        <tr>
            <td class="text-end" style="padding: 0 !important;"><img src="~/img/Filpride.jpg" width="130px" /></td>
        </tr>
        <tr style="margin: 0 !important;">
            <td class="text-center" style="padding: 0 !important;">
                <h2 class="company-name" style="margin: 0 0 1px 0;"><u><b>&nbsp;FILPRIDE RESOURCES INC.&nbsp;</b></u></h2>
                <p style="margin: 0; padding: 0; line-height: 1;">
                    57 Westgate Office, Sampson Road, CBD, Subic Bay Freeport Zone,<br />
                    Kalaklan, Olongapo City, 2200 Zambales, Philippines<br />
                    VAT Reg. TIN: 000-216-589-00000
                </p>
            </td>
        </tr>
        <tr>
            <td class="text-end" style="padding: 0 !important;"><h6 class="series"><b>No.&nbsp;@Html.DisplayFor(model => model.SalesInvoiceNo)</b></h6></td>
        </tr>
        <tr>
            <td class="text-center" style="padding: 0 !important;"><h3 class="module-name"><b>SALES INVOICE</b></h3></td>
        </tr>
    </tbody>
</table>

<div class="table-responsive">
    <table class="w-100">
        <tbody>
            <tr>
                <td>
                    <span><b>Sold to:</b></span>
                    &nbsp; @Html.DisplayFor(model => model.Customer.CustomerName) &nbsp;<br />

                    <span><b>Address:</b></span>
                    &nbsp; @Html.DisplayFor(model => model.Customer.CustomerAddress) &nbsp;<br />

                    <span><b>TIN:</b></span>
                    &nbsp; @Html.DisplayFor(model => model.Customer.CustomerTin) &nbsp;<br />

                    <span><b>Business Style:</b></span>
                    &nbsp; @Html.DisplayFor(model => model.Customer.BusinessStyle) &nbsp;
                </td>

                <td class="w-25 text-nowrap">

                    <b>Invoice Date:</b>
                    &nbsp; <span>@Html.DisplayFor(model => model.TransactionDate)</span>
                    <br />
                    <b>Terms:</b>&nbsp;<span>@Html.DisplayFor(model => model.Customer.CustomerTerms)</span>&nbsp;<br />
                    <b>Due Date:</b>&nbsp; <span>@Html.DisplayFor(model => model.DueDate)</span><br />

                    <b>Other Ref No.:</b>&nbsp; @Html.DisplayFor(model => model.OtherRefNo) &nbsp;
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="table-responsive" style="margin-top:20px;">
    <table class="table-bordered w-100 text-center">
        <tbody>
            <tr>
                <td><b>PRODUCT DESCRIPTION</b></td>
                <td><b>UNIT</b></td>
                <td><b>QUANTITY</b></td>
                <td><b>UNIT PRICE</b></td>
                <td><b>AMOUNT</b></td>
            </tr>

            <tr style="height:80px;">
                <td>@Html.DisplayFor(model => model.Product.ProductName)</td>
                <td>@Html.DisplayFor(model => model.Product.ProductUnit)</td>
                <td>@(Model.Customer.CustomerCode != "GOV0027" ? Html.DisplayFor(model => model.Quantity) : Model.Quantity.ToString("N4") )</td>
                <td>@(Model.Customer.CustomerCode != "GOV0027" ? Html.DisplayFor(model => model.UnitPrice) : Model.UnitPrice.ToString("N4") )</td>
                <td>@(Model.Customer.CustomerCode != "GOV0027" ? Html.DisplayFor(model => model.Amount) : Model.Amount.ToString("N4"))</td>
            </tr>
        </tbody>
    </table>
</div>
@{
    if (Model.Customer.VatType == "Vatable")
    {
        if (Model.Customer.WithHoldingTax && !Model.Customer.WithHoldingVat)
        {
            <p style="line-height: 1; margin-top:20px;">
                Creditable Withholding Tax with the amount of <b>@(Model.Customer.CustomerCode != "GOV0027" ? withHoldingTaxAmount.ToString("N4") : withHoldingTaxAmount.ToString("N4"))</b> is computed for this invoice.<br />
                Please attach BIR Form 2307 to your payment if you deducted Expanded Withholding Tax.
            </p>
        }
        else if (Model.Customer.WithHoldingVat && !Model.Customer.WithHoldingTax)
        {
            <p style="line-height: 1; margin-top:20px;">
                Creditable Withholding Vat with the amount of <b>@(Model.Customer.CustomerCode != "GOV0027" ? withHoldingVatAmount.ToString("N4") : withHoldingVatAmount.ToString("N4"))</b> is computed for this invoice.<br />
                Please attach BIR Form 2306 to your payment if you deducted Expanded Withholding Vat.
            </p>
        }
        else if (Model.Customer.WithHoldingTax && Model.Customer.WithHoldingVat)
        {
            <p style="line-height: 1; margin-top:20px;">
                Creditable Withholding Tax with the amount of <b>@(Model.Customer.CustomerCode != "GOV0027" ? withHoldingTaxAmount.ToString("N4") : withHoldingTaxAmount.ToString("N4"))</b> is computed for this invoice.<br />
                Creditable Withholding Vat with the amount of <b>@(Model.Customer.CustomerCode != "GOV0027" ? withHoldingVatAmount.ToString("N4") : withHoldingVatAmount.ToString("N4"))</b> is computed for this invoice.<br />
                Please attach BIR Form 2306 and 2307 to your payment if you deducted Expanded Withholding Tax and Vat.
            </p>
        }
    }
    else
    {
        if (Model.Customer.WithHoldingTax && !Model.Customer.WithHoldingVat)
        {
            <p style="line-height: 1; margin-top:20px;">
                Creditable Withholding Tax with the amount of <b>@(Model.Customer.CustomerCode != "GOV0027" ? withHoldingTaxAmount.ToString("N4") : withHoldingTaxAmount.ToString("N4"))</b> is computed for this invoice.<br />
                Please attach BIR Form 2307 to your payment if you deducted Expanded Withholding Tax.
            </p>
        }
        else if (Model.Customer.WithHoldingVat && !Model.Customer.WithHoldingTax)
        {
            <p style="line-height: 1; margin-top:20px;">
                Creditable Withholding Vat with the amount of <b>@(Model.Customer.CustomerCode != "GOV0027" ? withHoldingVatAmount.ToString("N4") : withHoldingVatAmount.ToString("N4"))</b> is computed for this invoice.<br />
                Please attach BIR Form 2306 to your payment if you deducted Expanded Withholding Vat.
            </p>
        }
        else if (Model.Customer.WithHoldingTax && Model.Customer.WithHoldingVat)
        {
            <p style="line-height: 1; margin-top:20px;">
                Creditable Withholding Tax with the amount of <b>@(Model.Customer.CustomerCode != "GOV0027" ? withHoldingTaxAmount.ToString("N4") : withHoldingTaxAmount.ToString("N4"))</b> is computed for this invoice.<br />
                Creditable Withholding Vat with the amount of <b>@(Model.Customer.CustomerCode != "GOV0027" ? withHoldingVatAmount.ToString("N4") : withHoldingVatAmount.ToString("N4"))</b> is computed for this invoice.<br />
                Please attach BIR Form 2306 and 2307 to your payment if you deducted Expanded Withholding Tax and Vat.
            </p>
        }
    }
}

<table class="w-100" style="height:170px; margin-top:20px;">
    <tbody>
        <tr>
            <td>

                <table class="table-bordered w-100 h-100" style="padding: 0; margin: 0;">
                    <tbody>

                        <tr class="h-100">
                            <td style="position:relative; top:-35px; left:4%;">INSTRUCTIONS: <br /><pre style="margin: 0; padding: 0">@Html.DisplayFor(model => model.Remarks)</pre></td>
                        </tr>
                    </tbody>
                </table>
            </td>
            <td>
                <table class="table-bordered w-100 h-100" style="padding: 0; margin: 0;">
                    <tbody>

                        <tr class="align-text-top text-center text-nowrap">
                            <td>
                                Prepared by
                                <br />
                                <p style="margin-top:20px;"><span style="display: inline-block; width:110px;" class="underline ">@Html.DisplayFor(model => model.CreatedBy)</span></p>
                            </td>
                            <td>
                                Approved by
                                <br />
                                <p style="margin-top:20px;"><span style="display: inline-block; width:110px;" class="underline">IVP / MSA</span></p>
                            </td>
                        </tr>
                        <tr class="align-text-top">
                            <td colspan="2">
                                <div style="margin-left:20px;">
                                    HAULER/DRIVER
                                    <span style="display: inline-block; width:90%;" class="underline  text-center">@Model.DeliveryReceipt?.Hauler?.SupplierName / @Model.DeliveryReceipt?.Driver</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
            <td>
                <table class="table-bordered w-100 h-100" style="padding: 0; margin: 0;">
                    <tbody class="text-nowrap table-font-bold">
                        <tr style="padding-left: 8%;">
                            <td><b>Vatable Sales: </b></td>

                            <td class="text-end">
                                @if (Model.Customer.VatType == "Vatable")
                                {
                                    @(Model.Customer.CustomerCode != "GOV0027" ? netOfVatAmount.ToString("N4") : netOfVatAmount.ToString("N4"));
                                }
                                </td>
                        </tr>
                        <tr style="padding-left: 8%;">
                            <td><b>Zero-Rated Sales: </b></td>

                            <td class="text-end">
                                @if (Model.Customer.VatType == "Zero Rated")
                                {
                                    @(Model.Customer.CustomerCode != "GOV0027" ? netOfVatAmount.ToString("N4") : netOfVatAmount.ToString("N4"));
                                }
                                </td>
                        </tr>
                        <tr style="padding-left: 8%;">
                            <td><b>VAT-Exempt Sales: </b></td>

                            <td class="text-end">
                                @if (Model.Customer.VatType == "Exempt")
                                {
                                    @(Model.Customer.CustomerCode != "GOV0027" ? netOfVatAmount.ToString("N4") : netOfVatAmount.ToString("N4"));
                                }
                                </td>
                        </tr>
                        <tr style="padding-left: 8%;">
                            <td><b>VAT Amount: </b></td>

                            <td class="text-end">
                                @if (Model.Customer.VatType == "Vatable")
                                {
                                    @(Model.Customer.CustomerCode != "GOV0027" ? vatAmount.ToString("N4") : vatAmount.ToString("N4") );
                                }
                                </td>
                        </tr>
                        <tr style="padding-left: 8%;">
                            <td><b>Discount: </b></td>

                            <td class="text-end">
                                @if (Model.Discount != 0)
                                {
                                    <p style="height: 9px;">@Html.DisplayFor(model => model.Discount)</p>
                                }
                            </td>
                        </tr>
                        <tr style="padding-left: 8%;">
                            <td><b>TOTAL SALES: </b></td>

                            <td class="text-end">
                                @{
                                    var totalSales = Model.Amount;
                                    var otherDiscount = Model.Amount - Model.Discount;
                                }
                                @if (Model.Discount == 0)
                                {
                                    if (Model.Customer.VatType == "Vatable")
                                    {
                                        @(Model.Customer.CustomerCode != "GOV0027" ? totalSales.ToString("N4") : totalSales.ToString("N4"))
                                    }
                                }
                                else
                                {
                                    @if (Model.Discount != 0)
                                    {
                                        @(Model.Customer.CustomerCode != "GOV0027" ? otherDiscount.ToString("N4") : otherDiscount.ToString("N4"))
                                    }
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>

<table class="table-bordered" style="margin-top:20px;">
    <tbody>
        <tr style="line-height: 1;">
            <td class="align-text-top">RECEIVED the above items in good order and condition. The Undersigned agrees to pay the total amount of this invoice in accordance to the terms appearing to the terms above.</td>
            <td class="align-text-top">CONDITION OF SALE - Interest at the rate of 38% per annum will be charge on all overdue accounts and in the event of judicial proceedings to enforce collection, the purchaser will pay a reasonable compensation not less than 25% of the amount due of the attorney's fees and expense of collection in addition to the costs of suit. Any action arising out of the transaction covered by sales invoice shall be brought in the appropriate courts of Pasig City and/or Metro Manila. Goods remain in the property of FILPRIDE RESOURCES INC. until paid in full.</td>
        </tr>
    </tbody>
</table>

@if (Model.Type == nameof(DocumentType.Documented))
{
    <p style="margin-top:20px;" class="p-italic">
        This is a system generated invoice, no signature required.
    </p>

    <p class="text-center w-100">
        <span>Acknowledgement Certificate No:</span>
        <span style="display: inline-block; width:150px;">@CS.ACCN</span>
        <span>&nbsp;&nbsp;Date Issued:</span>
        <span style="display: inline-block; width:50px;">@CS.DateIssued</span><br />
        Series: SI0000000001 - SI9999999999
        Date and Time Created:&nbsp;@Model.CreatedDate
    </p>

    @if (!Model.IsPrinted)
    {
        <div class="text-end">
            ORIGINAL COPY
        </div>
    }
    else
    {
        <div class="text-end">
            REPRINT COPY
        </div>
    }
}

<div class="row pt-2">
    @{
        if (Model.PostedBy == null)
        {
            <div class="col-6 col-md-3">
                <a id="approveButton" class="btn btn-primary form-control buttons" onclick="confirmPost(@Model.SalesInvoiceId)">Post</a>
            </div>
        }
        else
        {
            <div class="col-6 col-md-3">
                <a asp-area="Filpride" asp-controller="SalesInvoice" asp-action="Printed" asp-route-id="@Model.SalesInvoiceId" onclick="window.print()" class="btn btn-primary form-control buttons">Print</a>
            </div>
        }
    }

    <div class="col-6 col-md-3">
        <a asp-area="Filpride" asp-controller="SalesInvoice" asp-action="Index" class="btn btn-outline-primary border form-control buttons">Back to List</a>
    </div>
</div>

@section Scripts {
    <script>
        function printPage() {
            // Call the print function
            window.print();
        }
    </script>
    <script>
        function confirmPost(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Replace with the actual URL that you want to redirect to
                    var url = `@Url.Action("Post", "SalesInvoice", new { area = "Filpride" })/${id}`;
                    window.location.href = url;
                }
            })
        }
    </script>
}