@model FilprideSalesInvoice

@{
    ViewData["Title"] = "Print Sales Invoice";
    decimal netDiscount = Model.Amount - Model.Discount;
    decimal netOfVatAmount = Model.Customer.VatType == SD.VatType_Vatable ? netDiscount / 1.12m : netDiscount;
    decimal vatAmount = Model.Customer.VatType == SD.VatType_Vatable ? netOfVatAmount * 0.12m : 0;
    decimal withHoldingTaxAmount = Model.Customer.WithHoldingTax ? (netDiscount / 1.12m) * 0.01m : 0;
    decimal withHoldingVatAmount = Model.Customer.WithHoldingVat ? (netDiscount / 1.12m) * 0.05m : 0;
}

