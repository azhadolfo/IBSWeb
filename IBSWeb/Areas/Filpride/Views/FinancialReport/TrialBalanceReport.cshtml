@using IBS.Utility.Helpers
@model ViewModelBook

@{
    ViewData["Title"] = "Trial Balance Report";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">TRIAL BALANCE REPORT</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="row">
                <div class="mb-3">
                    <label asp-for="DateFrom" class="control-label"></label>
                    <input type="date" asp-for="DateFrom" class="form-control" value="@DateTimeHelper.GetCurrentPhilippineTime().ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DateFrom" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DateTo" class="control-label"></label>
                    <input type="date" asp-for="DateTo" class="form-control" value="@DateTimeHelper.GetCurrentPhilippineTime().ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DateTo" class="text-danger"></span>
                </div>
                <div class="form-group row mt-4">
                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn btn-primary btn-lg">Generate Excel Report</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function submitForm(action) {
            var form = document.getElementById('dynamicForm');
            form.action = action;
            form.submit();
        }
    </script>
}

