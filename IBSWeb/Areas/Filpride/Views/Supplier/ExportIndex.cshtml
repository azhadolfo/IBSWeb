@model IEnumerable<FilprideSupplier>

@{
    ViewData["Title"] = "Supplier - Export";
}
<link rel="stylesheet" href="~/css/index-style.css">
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 table-responsive">
        <div class="row pb-3">
            <div class="col-6">
                <div class="row g-3 align-items-end">
                    <div class="col-auto">
                        <label class="fw-semibold small text-muted mb-1">Filter by Date</label><br/>
                        <label class="fw-semibold small text-muted mb-1">Date From</label>
                        <input type="date" id="dateFrom" class="form-control rounded-3 shadow-sm" style="width:150px;">
                    </div>

                    <div class="col-auto">
                        <label class="fw-semibold small text-muted mb-1">Date To</label>
                        <input type="date" id="dateTo" class="form-control rounded-3 shadow-sm" style="width:150px;">
                    </div>
                </div>
            </div>
            <div class="col-6 text-end">
                <p>
                    <button type="button" class="btn btn-primary" onclick="exportToExcel()">Save to Excel</button>
                </p>
            </div>
        </div>

        <table class="table table-bordered table-hover" id="supplierTable">
            <thead class="table-secondary">
                <tr>
                    <th>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SupplierCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SupplierName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SupplierAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SupplierTin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SupplierTerms)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VatType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        let selectedRecords = new Set();
        $(document).ready(function () {
            let table = $('#supplierTable').DataTable({
                processing: true,
                serverSide: false,
                stateSave: true,
                ajax: {
                    url: '@Url.Action("GetSupplierList", "Supplier")',
                    type: 'POST',
                    data: function (d) {
                        return $.extend({}, d, {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        });
                    },
                    error: function (xhr) {
                        console.log(xhr.responseText);
                    }
                },
                columns: [
                    {data: 'supplierId', orderable: false, searchable: false, render: DataTable.render.select()},
                    { data: 'supplierCode' },
                    { data: 'supplierName' },
                    { data: 'supplierAddress' },
                    { data: 'supplierTin' },
                    { data: 'supplierTerms' },
                    { data: 'vatType' },
                    { data: 'category' },
                    {
                        "data": "createdDate",
                        "name": "createdDate",
                        "render": function (data) {
                            let date = new Date(data);
                            return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' });
                        }
                    }
                ],
                select: {
                    style: 'multi',
                    selector: 'td:first-child'
                },
                order: [[1, 'desc']]
            });

            table.on('select deselect', function(e, dt, type, indexes) {
                if (type === 'row') {
                    indexes.forEach(function(idx) {
                        let id = table.row(idx).data().supplierId;
                        selectedRecords[e.type === 'select' ? 'add' : 'delete'](id);
                    });
                }
            });

            $.fn.dataTable.ext.search.push(function(settings, data, dataIndex) {
                let getDateFrom = $('#dateFrom');
                let getDateTo = $('#dateTo');
                let dateFrom = getDateFrom.val() ? new Date(getDateFrom.val()) : null;
                let dateTo = getDateTo.val() ? new Date(getDateTo.val()) : null;
                let transactionDate = new Date(data[8]);

                // Remove time part
                if (dateFrom) dateFrom.setHours(0,0,0,0);
                if (dateTo) dateTo.setHours(0,0,0,0);
                transactionDate.setHours(0,0,0,0);

                return (dateFrom === null || transactionDate >= dateFrom) &&
                    (dateTo === null || transactionDate <= dateTo);
            });

            $('#dateFrom, #dateTo').on('change', function() {
                $('#supplierTable').DataTable().draw();
            });
        });
        
        function exportToExcel() {
            let selectedIds = Array.from(selectedRecords).join(',');
            
            if (selectedIds) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Export", "Supplier")';
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'selectedRecord';
                input.value = selectedIds;
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            } else {
                alert('No Supplier selected.');
            }
        }
    </script>
}