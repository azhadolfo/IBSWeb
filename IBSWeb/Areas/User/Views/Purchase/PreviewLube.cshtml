@using IBS.Models.ViewModels
@model LubeDeliveryVM

<div class="mb-3">
    <h2 class="text-center">Delivery Details</h2>
        <div class="row">
            <div class="col-10">
            <h6 class="px-2">@Html.DisplayNameFor(model => model.Header.SalesInvoice): @Model.Header.SalesInvoice</h6>
            <h6 class="px-2">@Html.DisplayNameFor(model => model.Header.SupplierCode): @Model.Header.SupplierCode</h6>
            <h6 class="px-2">Supplier Name: @ViewData["SupplierName"]</h6>
            </div>
            <div class="col-2">
            <h6 class="px-2">Date: @Model.Header.DeliveryDate.ToString("MMMM dd, yyyy")</h6>
            <h6 class="px-2">@Html.DisplayNameFor(model => model.Header.DrNo): @Model.Header.DrNo</h6>
            <h6 class="px-2">@Html.DisplayNameFor(model => model.Header.PoNo): @Model.Header.PoNo</h6>
            </div>
        </div>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Quantity</th>
                <th>Unit</th>
                <th>Description</th>
                <th>Unit Price</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Details)
            {
                <tr>
                    <td>@Html.DisplayFor(d => obj.Quantity)</td>
                    <td>@Html.DisplayFor(d => obj.Unit)</td>
                    <td>@Html.DisplayFor(d => obj.Description)</td>
                    <td>@Html.DisplayFor(d => obj.UnitPrice)</td>
                    @* <td>@Html.DisplayFor(d => obj.Amount)</td> *@
                </tr>
            }
        </tbody>
    </table>
</div>