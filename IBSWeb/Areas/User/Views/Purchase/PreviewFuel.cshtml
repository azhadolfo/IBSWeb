@model FuelPurchase

<div class="mb-5">
    <h2 class="text-center">Delivery Details</h2>
    <div class="row">
        <div class="col-10">
            <h6 class="px-2"><b>@Html.DisplayNameFor(model => model.Driver):</b> @Html.DisplayFor(model => model.Driver)</h6>
            <h6 class="px-2"><b>@Html.DisplayNameFor(model => model.Hauler):</b> @Html.DisplayFor(model => model.Hauler)</h6>
            <h6 class="px-2"><b>@Html.DisplayNameFor(model => model.PlateNo):</b> @Html.DisplayFor(model => model.PlateNo)</h6>
            <h6 class="px-2"><b>@Html.DisplayNameFor(model => model.WcNo):</b> @Html.DisplayFor(model => model.WcNo)</h6>
        </div>
        <div class="col-2">
            <h6 class="px-2"><b>Date:</b> @Model.DeliveryDate.ToString("MMMM dd, yyyy")</h6>
            <h6 class="px-2"><b>@Html.DisplayNameFor(model => model.DrNo):</b>@Html.DisplayFor(model => model.DrNo)</h6>
            <h6 class="px-2"><b>@Html.DisplayNameFor(model => model.StationCode):</b>@Html.DisplayFor(model => model.StationCode)</h6>
        </div>
    </div>
</div>

