@model IEnumerable<GeneralLedger>

<style>
    .container {
        max-width: none;
    }

    @@page {
        size: landscape;
    }
</style>

<div class="mb-3 row">
    <div class="col-11">
        <h4>GENERAL LEDGER BY TRANSACTION</h4>
    </div>
    <div class="dropdown col-1">
        <button class="btn btn-primary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            Sort By <i class="bi bi-funnel-fill"></i>
        </button>
        <ul class="dropdown-menu" aria-labelledby="sortDropdown">
            <li><button type="button" class="dropdown-item" data-sortby="Date">Date<span class="selected-sort">&#10003;</span></button></li>
            <li><button type="button" class="dropdown-item" data-sortby="AccountNo">Account No<span class="selected-sort" style="display:none;">&#10003;</span></button></li>
            <li><button type="button" class="dropdown-item" data-sortby="AccountName">Account Title<span class="selected-sort" style="display:none;">&#10003;</span></button></li>
        </ul>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table id="ledgerTable" class="table">
            <thead>
                <tr class="table-primary">
                    <th>Date</th>
                    <th>Journal</th>
                    <th>Particular</th>
                    <th>Account Number</th>
                    <th>Account Title</th>
                    <th class="text-center">Debit</th>
                    <th class="text-center">Credit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var journal in Model.OrderBy(j => j.TransactionDate))
                {
                    <tr>
                        <td>@Html.DisplayFor(model => journal.TransactionDate)</td>
                        <td>@journal.JournalReference</td>
                        <td>@journal.Particular</td>
                        <td>@journal.AccountNumber</td>
                        <td>@journal.AccountTitle</td>
                        <td class="text-end">@journal.Debit.ToString("N2")</td>
                        <td class="text-end">@journal.Credit.ToString("N2")</td>
                    </tr>
                }
                <tr class="table-primary">
                    <td colspan="5" class="text-center">TOTAL</td>
                    <td class="text-end">@Model.Sum(j => j.Debit).ToString("N2")</td>
                    <td class="text-end">@Model.Sum(j => j.Credit).ToString("N2")</td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <p><i>No ledger entries found for the specified criteria.</i></p>
}

<div class="row mt-5">
    <div class="col-6 col-md-3">
        <a onclick="window.print()" class="btn btn-primary form-control buttons">Print</a>
    </div>
    <div class="col-6 col-md-3">
        <a asp-area="User" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border form-control buttons">Back to Homepage</a>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.dropdown-item').forEach(item => {
            item.addEventListener('click', event => {
                // Remove check mark from all items
                document.querySelectorAll('.dropdown-item .selected-sort').forEach(checkmark => {
                    checkmark.style.display = 'none';
                });

                // Add check mark to the clicked item
                const checkmark = event.target.querySelector('.selected-sort');
                checkmark.style.display = 'inline';

                const sortBy = event.target.getAttribute('data-sortby');
                const rows = Array.from(document.querySelectorAll('#ledgerTable tbody tr'));
                rows.sort((a, b) => {
                    const aVal = a.querySelector(`td:nth-child(${getColIndex(sortBy)})`).textContent;
                    const bVal = b.querySelector(`td:nth-child(${getColIndex(sortBy)})`).textContent;
                    return aVal.localeCompare(bVal);
                });
                const tbody = document.querySelector('#ledgerTable tbody');
                tbody.innerHTML = '';
                rows.forEach(row => tbody.appendChild(row));
            });
        });

        function getColIndex(colName) {
            switch (colName) {
                case 'Date':
                    return 1;
                case 'AccountNo':
                    return 4;
                case 'AccountName':
                    return 5;
                default:
                    return 1;
            }
        }
    </script>
}