@model Customer
@using IBS.Utility

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Deactivate Customer</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="CustomerId" hidden />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="CustomerName" class="form-control border-0 shadow" placeholder="" disabled />
                    <label asp-for="CustomerName" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="CustomerAddress" class="form-control border-0 shadow" placeholder="" disabled />
                    <label asp-for="CustomerAddress" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="CustomerTin" class="form-control border-0 shadow" placeholder="" disabled />
                    <label asp-for="CustomerTin" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="BusinessStyle" class="form-control border-0 shadow" placeholder="" disabled />
                    <label asp-for="BusinessStyle" class="ms-2"></label>
                </div>
                <div class="form-group py-2 col-12">
                    <select asp-for="CustomerType" class="form-select js-select2 border-0 shadow" style="width:100%; max-height: 200px;" disabled>
                        <option value="" selected disabled>Select customer type</option>
                        @foreach (CustomerType customerType in Enum.GetValues<CustomerType>())
                        {
                            <option value="@customerType">@customerType.ToString()</option>
                        }
                    </select>
                </div>
                <div class="form-group py-2 col-12">
                    <select asp-for="CustomerTerms" class="form-select js-select2 border-0 shadow" style="width:100%; max-height: 200px;" disabled>
                        <option value="" selected disabled>Select payment terms</option>
                        <option value="@SD.Terms_Cod">@SD.Terms_Cod</option>
                        <option value="@SD.Terms_7d">@SD.Terms_7d</option>
                        <option value="@SD.Terms_15d">@SD.Terms_15d</option>
                        <option value="@SD.Terms_30d">@SD.Terms_30d</option>
                        <option value="@SD.Terms_M15">@SD.Terms_M15</option>
                        <option value="@SD.Terms_M30">@SD.Terms_M30</option>
                    </select>
                </div>
                <div class="form-group py-2 col-12">
                    <select asp-for="VatType" class="form-select js-select2 border-0 shadow" style="width:100%; max-height: 200px;" disabled>
                        <option value="" selected disabled>Select vat type</option>
                        <option value="@SD.VatType_Vatable">@SD.VatType_Vatable</option>
                        <option value="@SD.VatType_ZeroRated">@SD.VatType_ZeroRated</option>
                        <option value="@SD.VatType_Exempt">@SD.VatType_Exempt</option>
                    </select>
                    <span asp-validation-for="VatType" class="text-danger"></span>
                </div>
                <div class="form-check pt-2">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="WithHoldingVat" disabled /> @Html.DisplayNameFor(model => model.WithHoldingVat)
                    </label>
                </div>
                <div class="form-check pb-2">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="WithHoldingTax" disabled /> @Html.DisplayNameFor(model => model.WithHoldingTax)
                    </label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Deactivate</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="User" asp-controller="Customer" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}