@using IBS.Models.ViewModels
@model SalesVM

@{
    ViewData["Title"] = "Manual Cashier Report";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Manual Cashier Report</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group py-2 col-12">
                    <label class="control-label">Offline List</label>
                    <select name="offlineNo" asp-items="@Model.Offlines" class="form-select js-select2 border-0 shadow" style="width:100%">
                        <option value="" selected>Select account</option>
                    </select>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Header.Date" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Header.Date" class="ms-2">Date<span class="required">*</span></label>
                    <span asp-validation-for="Header.Date" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Header.Cashier" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Header.Cashier" class="ms-2">Cashier<span class="required">*</span></label>
                    <span asp-validation-for="Header.Cashier" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Header.Shift" class="form-control border-0 shadow" placeholder="" required />
                    <label asp-for="Header.Shift" class="ms-2">Shift<span class="required">*</span></label>
                    <span asp-validation-for="Header.Shift" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input name="closing" class="form-control border-0 shadow" placeholder="" required/>
                    <label class="ms-2">Closing<span class="required">*</span></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="User" asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
