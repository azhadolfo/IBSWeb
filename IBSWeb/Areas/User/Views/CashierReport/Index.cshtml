@model IEnumerable<SalesHeader>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Cashier's Report</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StationPosCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cashier)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Shift)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TimeIn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TimeOut)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.SalesHeaderId))
                {
                    <tr>
                        <td>
                            @obj.StationPosCode
                        </td>
                        <td>
                            @obj.Date.ToString("MMMM dd, yyyy")
                        </td>
                        <td>
                            @obj.Cashier
                        </td>
                        <td>
                            @obj.Shift
                        </td>
                        <td>
                            @obj.TimeIn
                        </td>
                        <td>
                            @obj.TimeOut
                        </td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-area="User" asp-controller="CashierReport" asp-action="Edit" asp-route-id="@obj.SalesHeaderId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-area="User" asp-controller="CashierReport" asp-action="Preview" asp-route-id="@obj.SalesNo" class="btn btn-primary mx-2">
                                    <i class="bi bi-printer-fill"></i> Preview
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

