@model Inventory
@using IBS.Utility

@{
    ViewData["Title"] = "Beginning Inventory";
    string stationCodeClaim = User.Claims.FirstOrDefault(c => c.Type == "StationCode").Value;
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Beginning Inventory</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input type="date" asp-for="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control border-0 shadow" placeholder="" required />
                    <label asp-for="Date" class="ms-2">Date<span class="required">*</span></label>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Quantity" class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Quantity" class="ms-2">Quantity<span class="required">*</span></label>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="UnitCost" class="form-control border-0 shadow" placeholder="" />
                    <label class="ms-2">Unit Cost<span class="required">*</span></label>
                    <span asp-validation-for="UnitCost" class="text-danger"></span>
                </div>
                <div class="form-group py-2 col-12">
                    <label class="control-label">Product List<span class="required">*</span></label>
                    <select asp-for="ProductCode" asp-items="@Model.Products" class="form-select js-select2 border-0 shadow" style="width:100%">
                        <option value="" selected disabled>Select product</option>
                    </select>
                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>
                @if (stationCodeClaim == "ALL")
                {
                    <div class="form-group py-2 col-12">
                        <label class="control-label">Station List<span class="required">*</span></label>
                        <select asp-for="StationCode" asp-items="@Model.Stations" class="form-select js-select2 border-0 shadow" style="width:100%">
                            <option value="" selected disabled>Select station</option>
                        </select>
                        <span asp-validation-for="StationCode" class="text-danger"></span>
                    </div>
                }
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Save</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="User" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to Homepage</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
