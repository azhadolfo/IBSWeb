@model IBS.Models.MMSI.MasterFile.MMSIVessel

@{
    ViewData["Title"] = "Create";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center text-white">
            <h2>CREATE VESSEL</h2>
        </div>
    </div>

    <div class="card-body">
        <form method="post" class="row">
            <div class="border-2 px-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="form-floating col-6 my-3">
                        <input asp-for="VesselName" type="text" class="form-control border-0 shadow" id="VesselName" placeholder="Name" required>
                        <label asp-for="VesselName" for="VesselName" class="ms-2">Vessel<span class="required text-danger">*</span></label>
                        <span asp-validation-for="VesselName" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-6 my-3">
                        <input asp-for="VesselNumber" type="text" class="form-control border-0 shadow" id="VesselNumber" placeholder="Number" required>
                        <label asp-for="VesselNumber" for="VesselNumber" class="ms-2">Vessel number<span class="required text-danger">*</span></label>
                        <span asp-validation-for="VesselNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label class="control-label ps-1 pb-1">Customer<span class="required text-danger">*</span></label>
                        <select asp-for="VesselType" id="customerId" class="form-select js-select2 border-0 shadow ms-5 mt-4" style="width:100%" required>
                            <option value="LOCAL">LOCAL</option>
                            <option value="FOREIGN">FOREIGN</option>
                        </select>
                        <span asp-validation-for="VesselType" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-end mt-3">
                <div class="text-center" style="width: 250px;">
                    <button class="btn btn-primary custom-btn col-12" type="submit" id="submitButton">Submit</button>
                </div>
                <div class="text-center" style="width: 250px;">
                    <a class="btn btn-outline-primary border col-12" asp-controller="Vessel" asp-action="Index">
                        Go Back
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>