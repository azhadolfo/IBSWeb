@model MMSIService

@{
    ViewData["Title"] = "Create";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center text-white">
            <h2>CREATE ACTIVITY/SERVICE</h2>
        </div>
    </div>

    <div class="card-body">
        <form method="post" class="row">
            <div class="border-2 px-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="form-floating col-6 my-3">
                        <input asp-for="ServiceName" type="text" class="form-control border-0 shadow" id="ServiceName" placeholder="Name" required>
                        <label asp-for="ServiceName" for="ServiceName" class="ms-2">Activity/Service<span class="required text-danger">*</span></label>
                        <span asp-validation-for="ServiceName" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-6 my-3">
                        <input asp-for="ServiceNumber" type="text" class="form-control border-0 shadow" id="ServiceNumber" placeholder="Number" required>
                        <label asp-for="ServiceNumber" for="ServiceNumber" class="ms-2">Activity/Service number<span class="required text-danger">*</span></label>
                        <span asp-validation-for="ServiceNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-end mt-3">
                <div class="text-center" style="width: 250px;">
                    <button class="btn btn-primary custom-btn col-12" type="submit" id="submitButton">Submit</button>
                </div>
                <div class="text-center" style="width: 250px;">
                    <a class="btn btn-outline-primary border col-12" asp-controller="Service" asp-action="Index">
                        Go Back
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>