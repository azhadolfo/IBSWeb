@model IBS.Models.MMSI.MMSIDispatchTicket

@{
    ViewData["Title"] = "Edit";

    var portId = ViewData["PortId"] as int?;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mt-3">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">CREATE SERVICE REQUESTS</h2>
        </div>
    </div>
    
    <div class="h1 fw-lighter p-3 align-middle text-center card-header bg-dark bg-gradient text-white">
        <i class="bi bi-pencil-square"></i> EDIT SERVICE REQUEST
    </div>
    <div class="card-body">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="DispatchTicketId" value="@Model.DispatchTicketId" type="text" class="form-control border-0 shadow" id="COSNumber" style="display:none">
            <div class="border-2 px-3">
                <div asp-validation-summary="ModelOnly"></div>
                <br />
                <div class="row pt-2">
                    <div class="form-floating col-12 mt-3">
                        <input asp-for="COSNumber" type="text" class="form-control border-0 shadow" id="COSNumber" placeholder="" maxlength="10" title="Dispatch Number must not exceed 10 characters">
                        <label asp-for="COSNumber" for="COSNumber" class="ms-2">COS Number</label>
                        <span asp-validation-for="COSNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12 mt-3">
                        <input asp-for="DispatchNumber" type="text" class="form-control border-0 shadow" id="DispatchNumber" placeholder=" " maxlength="20" title="Dispatch Number must not exceed 20 characters" required>
                        <label asp-for="DispatchNumber" for="DispatchNumber" class="ms-2">Dispatch number<span class="required text-danger">*</span></label>
                        <span asp-validation-for="DispatchNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12 mt-3">
                        <input asp-for="CreateDate" type="date" value="@(Model.CreateDate.ToString("yyyy-MM-dd"))" class="form-control border-0 shadow" id="CreateDate" placeholder=" " required>
                        <label asp-for="CreateDate" for="CreateDate" class="ms-2">Date Created<span class="required text-danger">*</span></label>
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="form-floating col-6 mt-3">
                        <input type="date" asp-for="DateLeft" value="@(Model.DateLeft.ToString("yyyy-MM-dd"))" class="form-control border-0 shadow" id="DateLeft" placeholder=" " required>
                        <label asp-for="DateLeft" for="DateLeft" class="ms-2">Date Left<span class="required text-danger">*</span></label>
                        <span asp-validation-for="DateLeft" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-6 mt-3">
                        <input type="time" asp-for="TimeLeft" value="@(Model.TimeLeft.ToString("HH\\:mm"))" class="form-control border-0 shadow" id="TimeLeft" placeholder=" " required>
                        <label asp-for="TimeLeft" for="TimeLeft" class="ms-2">Time Left<span class="required text-danger">*</span></label>
                        <span asp-validation-for="TimeLeft" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="form-floating col-6 mt-3">
                        <input type="date" asp-for="DateArrived" value="@(Model.DateArrived.ToString("yyyy-MM-dd"))" class="form-control border-0 shadow" id="DateArrived" placeholder=" " required>
                        <label asp-for="DateArrived" for="DateArrived" class="ms-2">Date Arrived<span class="required text-danger">*</span></label>
                        <span asp-validation-for="DateArrived" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-6 mt-3">
                        <input type="time" asp-for="TimeArrived" value="@(Model.TimeArrived.ToString("HH\\:mm"))" class="form-control border-0 shadow" id="TimeArrived" placeholder=" " required>
                        <label asp-for="TimeArrived" for="TimeArrived" class="ms-2">Time Arrived<span class="required text-danger">*</span></label>
                        <span asp-validation-for="TimeArrived" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-12 mt-3">
                        <label class="control-label ps-1 pb-1">Activity/Service<span class="required text-danger">*</span></label>
                        <select asp-for="ActivityServiceId" asp-items="@Model.ActivitiesServices" class="form-select js-select2 border-0 shadow" style="width:100%">
                            <option value="">Select Activity Service</option>
                        </select>
                        <span asp-validation-for="ActivityServiceId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12 mt-3">
                        <label class="control-label ps-1 pb-1">Port<span class="required text-danger">*</span></label>
                        <select asp-for="@Model.Terminal.Port.PortId" id="PortSelect" asp-items="@Model.Ports" class="form-select js-select2 border-0 shadow" style="width:100%" value="@Model.Terminal.Port.PortId">
                            <option value="">Select Port</option>
                        </select>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-12 mt-3">
                        <label class="control-label ps-1 pb-1">Terminal<span class="required text-danger">*</span></label>
                        <select id="TerminalSelect" asp-items="@Model.Terminals" asp-for="TerminalId" class="form-select js-select2 border-0 shadow" style="width:100%">
                            <option value="">Select Terminal</option>
                        </select>
                        <span asp-validation-for="TerminalId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-12 mt-3">
                        <label class="control-label ps-1 pb-1">Tugboat<span class="required text-danger">*</span></label>
                        <select asp-for="TugBoatId" asp-items="@Model.Tugboats" class="form-select js-select2 border-0 shadow ms-5 mt-3" style="width:100%" required>
                            <option value="">Select Tugboat</option>
                        </select>
                        <span asp-validation-for="TugBoatId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12 mt-3">
                        <label class="control-label ps-1 pb-1">Tug Master<span class="required text-danger">*</span></label>
                        <select asp-for="TugMasterId" asp-items="@Model.TugMasters" class="form-select js-select2 border-0 shadow" style="width:100%">
                            <option value="">Select Tug Master</option>
                        </select>
                        <span asp-validation-for="TugMasterId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12 my-3">
                        <label class="control-label ps-1 pb-1">Vessel<span class="required text-danger">*</span></label>
                        <select asp-for="VesselId" asp-items="@Model.Vessels" class="form-select js-select2 border-0 shadow" style="width:100%">
                            <option value="">Select Vessel</option>
                        </select>
                        <span asp-validation-for="VesselId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating col-12 my-1">
                        <input asp-for="BaseOrStation" value="@Model.BaseOrStation" type="text" class="form-control border-0 shadow" id="BaseOrStation" placeholder=" ">
                        <label asp-for="BaseOrStation" for="BaseOrStation" class="ms-2">Base or Station</label>
                        <span asp-validation-for="BaseOrStation" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12 my-1">
                        <input asp-for="VoyageNumber" value="@Model.VoyageNumber" type="text" class="form-control border-0 shadow" id="VoyageNumber" placeholder=" ">
                        <label asp-for="VoyageNumber" for="VoyageNumber" class="ms-2">VoyageNumber</label>
                        <span asp-validation-for="VoyageNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating col-12 my-1">
                        <input asp-for="Remarks" value="@Model.Remarks" type="text" class="form-control border-0 shadow" id="Remarks" placeholder=" ">
                        <label asp-for="Remarks" for="Remarks" class="ms-2">Remarks</label>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12 my-1">
                        <label for="file" class="form-label">Upload image of Dispatch Ticket</label>
                        <input class="form-control form-control-sm" id="fileUpload" name="file" type='file' accept="image/png, image/jpg, image/jpeg" />
                        @if (Model.UploadName != null)
                        {
                            <small class="text-muted">Previously uploaded: <strong>@Model.UploadName</strong></small>
                        }
                    </div>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.UploadName))
            {
                <div class="row justify-content-end">
                    <div class="col-6 px-1 mt-1">
                        <a class="btn btn-primary custom-btn col-12 align-content-center" id="viewUpload">
                            <i class="bi bi-eye"></i> View Image
                        </a>
                    </div>
                    <div class="col-6 px-1 mt-1">
                        <a class="btn btn-primary custom2-btn col-12 align-content-center" id="deleteImage" data-image-id="@Model.DispatchTicketId">
                            <i class="bi bi-trash-fill"></i> Delete Image
                        </a>
                    </div>
                </div>
                <div class="row">
                </div>
            }
            <div class="row mt-4">
                <div class="col-6 px-1">
                    <button class="btn btn-primary custom-btn col-12" id="submitButton">
                        <i class="bi bi-pencil-square"></i> Save
                    </button>
                </div>
                <div class="col-6 px-1">
                    <a class="btn btn-primary custom2-btn col-12" asp-controller="ServiceRequest" asp-action="Index" asp-route-id="@Model.DispatchTicketId">
                        <i class="bi bi-arrow-90deg-left"></i> Go Back
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            document.getElementById('viewUpload')?.addEventListener('click', function () {
                var maxHeight = window.innerHeight * 0.8;

                Swal.fire({
                    imageUrl: '@Url.Content("~/Dispatch_Ticket_Uploads/" + Model.UploadName)',
                    imageAlt: "Custom image",
                    showConfirmButton: false,
                    background: 'transparent',
                    customClass: {
                        popup: 'custom-image-popup' // Unique class for this modal
                    },
                    padding: 0,
                    width: 'auto',
                    heightAuto: true,
                    didOpen: () => {
                        $('.swal2-image').css('max-height', maxHeight + 'px');
                        $('.swal2-image').css('height', 'auto');
                    }
                });
            });
        });
    </script>

    <script>
        var currentPort = "";
        const select = document.getElementById("TerminalSelect");

        $(document).ready(function () {

            // function for terminal choices change when port is selected
            function HandlePortChange() {
                var portId = $("#PortSelect").val();

                $.ajax({
                    url: '@Url.Action("ChangeTerminal", "ServiceRequest")',
                    type: "GET",
                    data: { portId: portId },
                    success: function (data) {
                        $("#TerminalSelect").empty();
                        if (Array.isArray(data) && data.length > 0) {
                            $("#TerminalSelect").append('<option>');
                            $.each(data, function (index, item) {
                                $("#TerminalSelect").append($('<option>', {
                                    value: item.value,
                                    text: item.text
                                }));
                            });
                        }
                    }
                });

            }

            // swal asking if sure to delete image
            document.getElementById('deleteImage')?.addEventListener('click', function () {
                var imageId = this.getAttribute('data-image-id');

                Swal.fire({
                    title: "Do you want to delete the image?",
                    showCancelButton: true,
                    confirmButtonText: "Yes",
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = `/ServiceRequest/DeleteImage/${imageId}`;
                    }
                });

            });

            // will ask if you want to replace existing image
            document.getElementById('submitButton')?.addEventListener('click', function (event) {

                event.preventDefault();
                var existingFileName = '@Model.UploadName';
                var newFile = document.getElementById('fileUpload').files.length > 0;

                if (existingFileName && existingFileName !== "" && newFile) {
                    Swal.fire({
                        title: "Do you want to replace the existing image?",
                        text: "The current image will be replaced with the new one.",
                        showCancelButton: true,
                        confirmButtonText: "Yes, replace it!",
                        cancelButtonText: "No, keep it"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            document.getElementById('submitButton').form.submit();
                        }
                    });
                }
                else {
                    document.getElementById('submitButton').form.submit();
                }
            });

            // if port changes, proc terminal choice change function
            $("#PortSelect").change(HandlePortChange);

        });
    </script>
}