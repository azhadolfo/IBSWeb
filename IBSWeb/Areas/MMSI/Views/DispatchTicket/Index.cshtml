@model IEnumerable<IBS.Models.MMSI.MMSIDispatchTicket>

@{
    ViewData["Title"] = "Index";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container {
        max-width: 100% !important;
        width: 100% !important;
    }

    /* Custom styles for professional look */
    .table th {
        font-weight: 600;
        color: #374151;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.025em;
    }

    .table tbody tr {
        transition: all 0.2s;
    }

    .table tbody tr:hover {
        background-color: rgba(59, 130, 246, 0.05);
    }

    .actions-dropdown .dropdown-item {
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
    }

    .actions-dropdown .dropdown-item:hover {
        background-color: #f3f4f6;
    }
    
    table {
        font-size: 10px !important;
        table-layout: auto !important;
    }

    table td {
        font-size: 12px !important;
        padding-left: 10px !important;
    }

    .card-body {
        margin: 5px !important;
        padding: 5px !important;
    }
</style>

<div class="loader-container">
    <div class="loader"></div>
    <div class="loader-text">Loading...</div>
</div>

<div class="container-fluid mt-4">
    
    <div class="card shadow m-1">

        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">DISPATCH TICKETS</h2>
                </div>
            </div>
        </div>

        <div class="card-body table-responsive">
            <div class="card-body">
                <table id="dataTable" class="table table-striped custom-table-width table-bordered mt-3">
                    <thead>
                    <tr>
                        <th class="text-center align-middle py-1">Date</th>
                        <th class="text-center align-middle py-1">COS #</th>
                        <th class="text-center align-middle py-1">Dispatch/<br/>Mooring Ticket</th>
                        <th class="text-center align-middle py-1">Date/<br/>Time Start</th>
                        <th class="text-center align-middle py-1">Date/<br/>Time End</th>
                        <th class="text-center align-middle py-1">Activity/<br/>Service Type</th>
                        <th class="text-center align-middle py-1">Port-<br/>Terminal</th>
                        <th class="text-center align-middle py-1">Tugboat</th>
                        <th class="text-center align-middle py-1">Tug Master</th>
                        <th class="text-center align-middle py-1">Vessel</th>
                        <th class="text-center align-middle">
                            <select id="statusDropdown" class="form-select">
                                <option value="All">All</option>
                                <option value="For Tariff">For Tariff</option>
                                <option value="Tariff Pending">Tariff Pending</option>
                                <option value="Disapproved">Disapproved</option>
                                <option value="For Billing">For Billing</option>
                                <option value="Billed">Billed</option>
                            </select>
                        </th>
                        <th class="actions-column align-middle text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center align-content-center">@(item.CreateDate.ToString("yyyy-MM-dd"))</td>
                            <td class="text-center align-content-center">@item.COSNumber</td>
                            <td class="text-center align-content-center">@item.DispatchNumber</td>
                            <td class="text-center align-content-center">@item.DateLeft.ToString("yyyy-MM-dd") @item.TimeLeft</td>
                            <td class="text-center align-content-center">@item.DateArrived.ToString("yyyy-MM-dd") @item.TimeArrived</td>
                            <td class="text-center align-content-center">@item.ActivityService.ActivityServiceName</td>
                            <td class="text-center align-content-center">@item.Terminal.Port.PortName-@item.Terminal.TerminalName</td>
                            <td class="text-center align-content-center">@item.Tugboat.TugboatName</td>
                            <td class="text-center align-content-center">@item.TugMaster.TugMasterName</td>
                            <td class="text-center align-content-center">@item.Vessel.VesselName</td>

                            <td class="text-center align-content-center">
                                @{
                                    var status = item.Status;
                                }
                                <span class="badge rounded-pill @(item.Status switch
                                                                {
                                                                    "For Tariff" => "bg-info",
                                                                    "Tariff Pending" => "bg-warning",
                                                                    "Disapproved" => "bg-danger",
                                                                    "For Billing" => "bg-success",
                                                                    "Billed" => "bg-success",
                                                                    _ => "bg-secondary"
                                                                })"
                                      style="font-size: 14px; color: Ivory">
                                    @item.Status
                                </span>
                            </td>

                            <td class="text-center justify-content-center d-flex">
                                <div class="align-content-center text-center" style="width: 150px !important;">
                                    @if (item.Status != "For Tariff" && item.Status != "Tariff Pending")
                                    {
                                        <a class="btn btn-primary col-12" href="@Url.Action("Preview", "DispatchTicket", new { id = item.DispatchTicketId })"><i class="bi bi-eye"></i> View</a>
                                    }
                                    @if (item.Status == "Tariff Pending")
                                    {
                                        <div class="dropdown align-content-center">
                                            <button class="btn btn-primary dropdown-toggle col-12" type="button" id="actionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">Actions</button>
                                            <ul class="dropdown-menu" style="position: absolute !important; left: 0 !important; right: auto !important;" aria-labelledby="actionsDropdown">
                                                <li><a class="dropdown-item" href="@Url.Action("Preview", "DispatchTicket", new { id = item.DispatchTicketId })" id="approveTariff"><i class="bi bi-eye-fill"></i> View</a></li>
                                                <li><a class="dropdown-item" href="@Url.Action("EditTariff", "DispatchTicket", new { id = item.DispatchTicketId })" id="approveTariff"><i class="bi bi-pencil-square"></i> Edit</a></li>
                                            </ul>
                                        </div>
                                    }
                                    @if (item.Status == "For Tariff")
                                    {
                                        <a class="btn btn-primary col-12" href="@Url.Action("SetTariff", "DispatchTicket", new { id = item.DispatchTicketId })"><i class="bi bi-cash-coin"></i> Set</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            document.getElementById('statusDropdown').addEventListener('click', function (e) {
                e.stopPropagation();
            });

            function handleStatusChange(status) {
                console.log("Station code change detected. Status:", status);

                $.ajax({
                    url: '@Url.Action("GetDispatchTicketList", "DispatchTicket")',
                    type: "GET",
                    data: { status: status },
                    success: function (data) 
                    {
                        if ($.fn.DataTable.isDataTable('#dataTable')) 
                        {
                            $('#dataTable').DataTable().destroy();
                        }
                        // Clear the table body content
                        $('#dataTable tbody').empty();
                        $.each(data, function (index, value) {
                            console.log('Index:', index, 'Value:', value);
                            let badgeClass = "";
                            switch (value.status) 
                            {
                                case "For Tariff":
                                    badgeClass = "bg-info";
                                    break;
                                case "Tariff Pending":
                                    badgeClass = "bg-warning";
                                    break;
                                case "Disapproved":
                                    badgeClass = "bg-danger";
                                    break;
                                case "For Billing":
                                    badgeClass = "bg-success";
                                    break;
                                case "Billed":
                                    badgeClass = "bg-success";
                                    break;
                                default:
                                    badgeClass = "bg-secondary";
                                    break;
                            }
                            $('#dataTable tbody').append(`
                                    <tr>
                                        <td class="text-center align-content-center">${value.createDate}</td>
                                        <td class="text-center align-content-center">${value.cosNumber || ""}</td>
                                        <td class="text-center align-content-center">${value.dispatchNumber}</td>
                                        <td class="text-center align-content-center">${value.dateLeft} ${value.timeLeft}</td>
                                        <td class="text-center align-content-center">${value.dateArrived} ${value.timeArrived}</td>
                                        <td class="text-center align-content-center">${value.activityService.activityServiceName}</td>
                                        <td class="text-center align-content-center">${value.terminal.port.portName}-${value.terminal.terminalName}</td>
                                        <td class="text-center align-content-center">${value.tugboat.tugboatName}</td>
                                        <td class="text-center align-content-center">${value.tugMaster.tugMasterName}</td>
                                        <td class="text-center align-content-center">${value.vessel.vesselName}</td>
                                        <td class="text-center align-content-center">
                                        <span class="badge rounded-pill ${badgeClass}" style="font-size: 14px; color: Ivory">
                                            ${value.status}
                                        </span>
                                    </td>
                                    <td class="text-center justify-content-center d-flex">
                                        <div class="align-content-center text-center" style="width: 150px !important;">
                                            ${value.status !== "For Tariff" ?
                                            `
                                                <a class="btn btn-primary col-12" href="DispatchTicket/Preview/${value.dispatchTicketId}"><i class="bi bi-eye"></i> View</a>
                                            ` :
                                            `
                                                <a class="btn btn-primary col-12" href="DispatchTicket/SetTariff/${value.dispatchTicketId}"><i class="bi bi-cash-coin"></i> Set</a>
                                            `}
                                        </div>
                                    </td>
                                </tr>
                            `);
                        });
                        $('#dataTable').DataTable({
                            paging: true,        // Enable pagination
                            searching: true,     // Enable the search bar
                            info: true,          // Show table information (e.g., "Showing 1 to 10 of X entries")
                            lengthChange: true,  // Enable "entries per page" dropdown
                            order: [[0, 'desc']]  // Default ordering (adjust as needed)
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX error:", error);
                    }
                });
            }

            $('#statusDropdown').on('change', function () {
                console.log("Test");
                let selectedValue = $('#statusDropdown').val(); // Get the selected value
                handleStatusChange(selectedValue); // Pass it as an argument
                console.log("Station code change detected. Status:", selectedValue);
            });

            document.querySelectorAll('.cancel-entry').forEach(item => {
                item.addEventListener('click', function () {
                    var id = this.getAttribute('data-id');

                    Swal.fire({
                        title: "Cancel this Service Request?",
                        text: "This action cannot be undone.",
                        showCancelButton: true,
                        confirmButtonText: "Yes",
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = `/DispatchTicket/Cancel/${id}`;
                        }
                    });
                });
            });
        });
    </script>
}