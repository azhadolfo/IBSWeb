@model MMSICollection

@{
    ViewData["Title"] = "Create";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center text-white">
            <h2><i class="bi bi-pencil-square"></i> Create Tug Master</h2>
        </div>
    </div>

    <div class="card-body">
        <form method="post" class="row">
            <div class="border-2 px-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="form-floating col-6 my-3">
                        <input asp-for="CollectionNumber" type="text" class="form-control border-0 shadow" id="CollectionNumber" placeholder="Name" required>
                        <label asp-for="CollectionNumber" for="CollectionNumber" class="ms-2">Collection Receipt#<span class="required text-danger">*</span></label>
                        <span asp-validation-for="CollectionNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-6 my-3">
                        <input asp-for="CustomerId" type="text" class="form-control border-0 shadow" id="CustomerId" placeholder="Number" required>
                        <label asp-for="CustomerId" for="CustomerId" class="ms-2">CustomerId<span class="required text-danger">*</span></label>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating col-6 my-3">
                        <input asp-for="CollectionNumber" type="text" class="form-control border-0 shadow" id="CollectionNumber" placeholder="Name" required>
                        <label asp-for="CollectionNumber" for="CollectionNumber" class="ms-2">Collection Receipt#<span class="required text-danger">*</span></label>
                        <span asp-validation-for="CollectionNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-6 my-3">
                        <input asp-for="CustomerId" type="text" class="form-control border-0 shadow" id="CustomerId" placeholder="Number" required>
                        <label asp-for="CustomerId" for="CustomerId" class="ms-2">CustomerId<span class="required text-danger">*</span></label>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row pt-2 mt-4">

                    <div class="form-group col-12">
                        <label class="control-label mb-2">Dispatch Tickets</label>
                        <select asp-for="ToCollectBillings" asp-items="@Model.Billings" class="form-control js-example-basic-multiple col-12" name="ToBillDispatchTickets" multiple="multiple" required>
                        </select>
                    </div>

                </div>

                <table id="dataTable" class="table table-striped table-bordered mt-3" style="width:100%">
                    <thead>
                    <tr>
                        <th class="text-start align-middle ps-4">TUGBOAT</th>
                        <th class="text-start align-middle ps-4">SERVICE</th>
                        <th class="text-start align-middle ps-4">TIME START</th>
                        <th class="text-start align-middle ps-4">TIME END</th>
                        <th class="text-start align-middle ps-4">HOUR</th>
                        <th class="text-start align-middle ps-4">RATE</th>
                        <th class="text-start align-middle ps-4">AMOUNT</th>
                        <th class="text-start align-middle ps-4">BAF RATE</th>
                        <th class="text-start align-middle ps-4">BAF AMOUNT</th>
                    </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
            <div class="row justify-content-end mt-3">
                <div class="text-center" style="width: 250px;">
                    <button class="btn btn-primary custom-btn col-12" type="submit" id="submitButton"><i class="bi bi-pencil-square"></i> Submit</button>
                </div>
                <div class="text-center" style="width: 250px;">
                    <a class="btn btn-outline-primary col-12" asp-controller="TugMaster" asp-action="Index">
                        <i class="bi bi-arrow-90deg-left"></i> Go Back
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>