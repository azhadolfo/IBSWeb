@{
    ViewData["Title"] = "Index";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container {
        max-width: 100% !important;
        width: 100% !important;
    }

    .card-body {
        margin: 5px !important;
        padding: 5px !important;
    }
</style>

<div class="loader-container">
    <div class="loader"></div>
    <div class="loader-text">Loading...</div>
</div>

<div class="container-fluid mt-4">
    
    <div class="card shadow mt-4">

        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">COLLECTION LIST</h2>
            </div>
        </div>

        <div class="card-body table-responsive">

            <div class="row justify-content-end mx-0">
                <div class="text-center" style="width: 150px;">
                    <a class="btn btn-primary w-100 align-content-center" asp-action="Create" asp-controller="Collection">
                        <i class="bi bi-plus-circle"></i> Create
                    </a>
                </div>
            </div>
            
            <div class="card-body">
                <table id="dataTable" class="table table-striped table-bordered" style="width:100%" data-order='[[0, "asc"]]'>
                    <thead>
                        <tr>
                            <th class="text-center align-content-center">Date</th>
                            <th class="text-center align-content-center">Collection Number</th>
                            <th class="text-center align-content-center">Check Date</th>
                            <th class="text-center align-content-center">Date Deposited</th>
                            <th class="text-center align-content-center">Amount</th>
                            <th class="text-center align-content-center">Customer</th>
                            <th class="text-center align-content-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        function handleStatusChange() {

            $.ajax({
                url: '@Url.Action("GetCollections", "Collection")',
                type: "GET",
                success: function (data) {
                    // Destroy existing DataTable if initialized
                    if ($.fn.DataTable.isDataTable("#dataTable")) {
                        $("#dataTable").DataTable().destroy();
                    }

                    // Clear table body
                    $("#dataTable tbody").empty();

                    // Populate table with new data
                    data.forEach((value, index) => {

                        $("#dataTable tbody").append(`
                                <tr>
                                    <td class="text-center align-content-center ">${value.date}</td>
                                    <td class="text-center align-content-center ">${value.collectionNumber}</td>
                                    <td class="text-center align-content-center ">${value.checkDate}</td>
                                    <td class="text-center align-content-center ">${value.depositDate}</td>
                                    <td class="text-center align-content-center ">${value.amount}</td>
                                    <td class="text-center align-content-center ">${value.customer.customerName}</td>
                                    <td class="text-center justify-content-center d-flex">
                                        <div class="dropdown align-content-center col-12">
                                            <button class="btn btn-primary dropdown-toggle col-12" type="button" id="actionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">Actions</button>
                                            <ul class="dropdown-menu" style="position: absolute !important; left: 0 !important; right: auto !important;" aria-labelledby="actionsDropdown">
                                                <li><a class="dropdown-item" href="/MMSI/Collection/Preview/${value.mmsiCollectionId}"><i class="bi bi-eye"></i> View</a></li>
                                                <li><a class="dropdown-item" href="/MMSI/Collection/Edit/${value.mmsiCollectionId}"><i class="bi bi-eye"></i> Edit</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            `);
                    });

                    // Initialize DataTable with custom options
                    $("#dataTable").DataTable({
                        paging: true,
                        searching: true,
                        info: true,
                        lengthChange: true,
                        columnDefs: [
                            {
                                "targets": 6,
                                "width": "150px",
                                "className": "text-center",
                                "orderable": false
                            }
                        ]
                    });
                },
                error: function (xhr, status, error) {
                    console.error("AJAX error:", error);
                }
            });
        }
        
        $(document).ready(function () {
            handleStatusChange();
        });
    
    </script>
}