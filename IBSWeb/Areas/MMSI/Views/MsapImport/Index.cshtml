@{
    ViewData["Title"] = "MSAP Import";
}

<style>
    .container {
        max-width: 60% !important;
        min-width: 580px !important;
        width: 60% !important;
    }
    
    @@media (max-width: 768px) {
        .container {
            max-width: 100% !important;
            min-width: 310px !important;
            width: 100% !important;
        }
    }
</style>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center bg-secondary p-3 rounded shadow">
        <h2 class="text-white m-0">@ViewData["Title"]</h2>
    </div>

    <div class="card shadow border-0 mt-3">
        <div class="card-body p-4">
            <form asp-action="Index" method="post">
                <div class="row">
                    <div class="col-12 col-md-6 py-2">
                        <h2 class="mb-3">Master Files</h2>
                        <div class="border rounded p-3">
                            @foreach (var option in new List<string> { "Customer", "Port", "Principal", "Service", "Tugboat", "TugMaster", "Vessel" })
                            {
                                <div class="form-check m-1">
                                    <input class="form-check-input" type="checkbox" value="@option" name="fieldList" id="@option">
                                    <label class="form-check-label" for="@option">
                                        @option Masterfile
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-12 col-md-6 py-2">
                        <h2 class="mb-3">Data Entries</h2>
                        <div class="border rounded p-3">
                            @foreach (var option in new List<string> { "DispatchTicket", "Billing", "Collection", "Tariff" })
                            {
                                <div class="form-check m-1">
                                    <input class="form-check-input" type="checkbox" value="@option" name="fieldList" id="@option">
                                    <label class="form-check-label" for="@option">
                                        @option entries
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary mt-4" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            
        });
    </script>
}