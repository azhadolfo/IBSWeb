@model IBS.Models.MMSI.MasterFile.MMSITerminal

@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center text-white">
            <h2>
                <i class="bi bi-pencil-square"></i> Edit Terminal
            </h2>
        </div>
    </div>
    
    <div class="card-body">
        
        <form method="post" class="row">
            
            <div class="border-2 px-3">
                <div asp-validation-summary="ModelOnly"></div>
                <input asp-for="TerminalId" value="@Model.TerminalId" style="display: none" />
                
                <div class="row">
                    <div class="form-floating col-6 my-3">
                        <input asp-for="TerminalName" value="@Model.TerminalName" type="text" class="form-control border-0 shadow" id="TerminalName" placeholder="Name" required>
                        <label asp-for="TerminalName" for="TerminalName" class="ms-2">Terminal name<span class="required text-danger">*</span></label>
                        <span asp-validation-for="TerminalName" class="text-danger"></span>
                    </div>

                    <div class="form-floating col-6 my-3">
                        <input asp-for="TerminalNumber" value="@Model.TerminalNumber" type="text" class="form-control border-0 shadow" id="TerminalNumber" placeholder="Number" required>
                        <label asp-for="TerminalNumber" for="TerminalNumber" class="ms-2">Tugboat Number<span class="required text-danger">*</span></label>
                        <span asp-validation-for="TerminalNumber" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="form-group col-6 my-3">
                        <label class="control-label ps-1 pb-1">Tugboat<span class="required text-danger">*</span></label>
                        <select asp-for="PortId" value="@Model.PortId" asp-items="@Model.Ports" class="form-select js-select2 border-0 shadow" style="width:100%" required>
                            <option value="">Select Port</option>
                        </select>
                        <span asp-validation-for="PortId" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
            <div class="row justify-content-end mt-3">

                <div class="text-center" style="width: 250px;">
                    <button class="btn btn-primary custom-btn col-12" type="submit" id="submitButton"><i class="bi bi-pencil-square"></i> Submit</button>
                </div>

                <div class="text-center" style="width: 250px;">
                    <a class="btn btn-outline-primary col-12" asp-controller="Terminal" asp-action="Index">
                        <i class="bi bi-arrow-90deg-left"></i> Go Back
                    </a>
                </div>

            </div>
            
        </form>
    </div>
</div>
