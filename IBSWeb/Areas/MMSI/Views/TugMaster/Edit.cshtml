@model IBS.Models.MMSI.MasterFile.MMSITugMaster

@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center text-white">
            <h2>
                Edit Tug Master
            </h2>
        </div>
    </div>
    
    <div class="card-body">
        
        <form method="post" class="row">
            
            <div class="border-2 px-3">
                <div asp-validation-summary="ModelOnly"></div>
                <input asp-for="TugMasterId" value="@Model.TugMasterId" style="display: none"/>
                
                <div class="row">
                    <div class="form-floating col-6 my-3">
                        <input asp-for="TugMasterName" value="@Model.TugMasterName" type="text" class="form-control border-0 shadow" id="TugMasterName" placeholder="Name" required>
                        <label asp-for="TugMasterName" for="TugMasterName" class="ms-2">Tug Master Name<span class="required text-danger">*</span></label>
                        <span asp-validation-for="TugMasterName" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating col-6 my-3">
                        <input asp-for="TugMasterNumber" value="@Model.TugMasterNumber" type="text" class="form-control border-0 shadow" id="TugMasterNumber" placeholder="Number" required>
                        <label asp-for="TugMasterNumber" for="TugMasterNumber" class="ms-2">Tug Master number<span class="required text-danger">*</span></label>
                        <span asp-validation-for="TugMasterNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row pb-3">
                    <div class="form-check col-3 ps-2 text-start d-flex align-items-center justify-content-start">
                        <input asp-for="IsActive" class="form-check-input m-0 ms-2" type="checkbox">
                        <label class="text-decoration-underline form-check-label ps-1 h4 m-0" for="IsActive">
                            Active
                        </label>
                    </div>
                </div>
                
            </div>
            
            <div class="row justify-content-end mt-3">
                
                <div class="text-center" style="width: 250px;">
                    <button class="btn btn-primary custom-btn col-12" type="submit" id="submitButton">Submit</button>
                </div>

                <div class="text-center" style="width: 250px;">
                    <a class="btn btn-outline-primary border col-12" asp-controller="TugMaster" asp-action="Index">
                        Go Back
                    </a>
                </div>
                
            </div>
            
        </form>
    </div>
</div>