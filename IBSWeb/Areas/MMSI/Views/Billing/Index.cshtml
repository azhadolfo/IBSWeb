@model IEnumerable<IBS.Models.MMSI.MMSIBilling>

@{
    ViewData["Title"] = "Index";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container {
        max-width: 100% !important;
        width: 100% !important;
    }

    /* Custom styles for professional look */
    .table th {
        font-weight: 600;
        color: #374151;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.025em;
    }

    .table tbody tr {
        transition: all 0.2s;
    }

    .table tbody tr:hover {
        background-color: rgba(59, 130, 246, 0.05);
    }

    .actions-dropdown .dropdown-item {
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
    }

    .actions-dropdown .dropdown-item:hover {
        background-color: #f3f4f6;
    }
    
    table {
        font-size: 10px !important;
        table-layout: auto !important;
    }

    table td {
        font-size: 12px !important;
        padding-left: 10px !important;
    }

    .card-body {
        margin: 5px !important;
        padding: 5px !important;
    }
</style>

<div class="loader-container">
    <div class="loader"></div>
    <div class="loader-text">Loading...</div>
</div>

<div class="container-fluid mt-4">
    
    <div class="card shadow m-1">

        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">BILLING LIST</h2>
            </div>
        </div>

        <div class="card-body table-responsive">
            <div class="row justify-content-end mx-0">
                <div class="text-center" style="width: 150px;">
                    <a class="btn btn-primary w-100 align-content-center" asp-action="Create" asp-controller="Billing">
                        <i class="bi bi-plus-circle"></i> Create
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="dataTable" class="table table-striped table-bordered" style="width:100%" data-order='[[0, "asc"]]'>
                    <thead>
                    <tr>
                        <th class="text-center align-content-center">Date</th>
                        <th class="text-center align-content-center">Billing Number</th>
                        <th class="text-center align-content-center">Total Amount</th>
                        <th class="text-center align-content-center">Customer</th>
                        <th class="text-center align-content-center">Port-Terminal</th>
                        <th class="text-center align-content-center">Vessel</th>
                        <th class="text-center align-content-center">Status</th>
                        <th class="align-content-center text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center align-content-center ">@item.Date.ToString("yyyy-MM-dd")</td>
                            <td class="text-center align-content-center ">@item.MMSIBillingNumber</td>
                            <td class="text-center align-content-center ">â‚±@item.Amount.ToString("N2")</td>
                            <td class="text-center align-content-center ">@item?.Customer?.CustomerName</td>
                            <td class="text-center align-content-center ">@item?.Terminal?.Port?.PortName-@item?.Terminal?.TerminalName</td>
                            <td class="text-center align-content-center ">@item?.Vessel?.VesselName</td>
                            
                            <td class="text-center align-content-center">
                                @{
                                    var status = item?.Status;
                                }
                                <span class="badge rounded-pill @(item?.Status switch
                                                                {
                                                                    "For Collection" => "bg-info",
                                                                    "Collected" => "bg-success",
                                                                    _ => "bg-secondary"
                                                                })"
                                      style="font-size: 14px; color: Ivory">
                                    @item.Status
                                </span>
                            </td>

                            <td class="text-center justify-content-center d-flex">
                                <div class="align-content-center text-center" style="width: 150px !important;">
                                    @if (item.Status != "For Collection")
                                    {
                                        <a class="btn btn-primary col-12" href="@Url.Action("Preview", "Billing", new { id = item.MMSIBillingId })"><i class="bi bi-eye"></i> View</a>
                                    }
                                    else
                                    {
                                        <div class="dropdown align-content-center">
                                            <button class="btn btn-primary dropdown-toggle col-12" type="button" id="actionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">Actions</button>
                                            <ul class="dropdown-menu" style="position: absolute !important; left: 0 !important; right: auto !important;" aria-labelledby="actionsDropdown">
                                                <li><a class="dropdown-item" href="@Url.Action("Preview", "Billing", new { id = item.MMSIBillingId })"><i class="bi bi-eye-fill"></i> View</a></li>
                                                <li><a class="dropdown-item" href="@Url.Action("Edit", "Billing", new { id = item.MMSIBillingId })"><i class="bi bi-pencil-square"></i> Edit</a></li>
                                            </ul>
                                        </div>
                                    }
                                </div>
                            </td>
                            
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Select all delete entries
            var deleteEntries = document.querySelectorAll('.delete-entry');

            deleteEntries.forEach(function (entry) {
                entry.addEventListener('click', function (e) {
                    e.preventDefault(); // Prevent the link from navigating away immediately

                    var id = this.getAttribute('data-id');
                    console.log(id);

                    Swal.fire({
                        title: "Delete this Billing?",
                        text: "This action cannot be undone.",
                        showCancelButton: true,
                        confirmButtonText: "Yes",
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = `/Billing/Delete/${id}`;
                        }
                    });
                });
            });
            
            if ($.fn.DataTable.isDataTable('#dataTable')) {
                $('#dataTable').DataTable().destroy();
            }

            $('#dataTable').DataTable({
                "autoWidth": false,
                "columnDefs": [
                    {
                        "targets": 7,
                        "width": "150px",
                        "className": "text-center",
                        "orderable": false
                    }
                ]
            });
        });
    </script>
}